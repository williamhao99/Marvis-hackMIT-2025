# Server port - The port on which the application will run (default: 3000)
PORT=3000

# App package name - Your application's unique identifier.  Make sure it exactly matches the package name in the MentraOS Developer Console
PACKAGE_NAME=org.yourname.appname

# API key - Your MentraOS developer API key from the MentraOS Developer Console (never commit the key to source control)
MENTRAOS_API_KEY=your_api_key_here

# Anthropic API key - Your Anthropic API key for image-to-text conversion (never commit the key to source control)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: External webhook URL for sending captured images
# When set, images will be POST-ed to this URL with base64 data and metadata
# EXTERNAL_WEBHOOK_URL=https://your-server.com/webhook/images

# Optional: Path where images will be saved (default: ./captured_images)
# IMAGE_STORAGE_PATH=./captured_images
