{
  "name": "ai-handyman-assistant",
  "version": "1.0.0",
  "description": "AI-powered hands-free handyman assistant for device repair and furniture assembly",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:mentra": "node dist/index-mentra.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:mentra": "nodemon --exec ts-node src/index-mentra.ts",
    "keyword": "ts-node src/keyword-listener.ts",
    "keyword:standalone": "ts-node src/standalone-keyword-detector.ts",
    "keyword:simple": "ts-node src/simple-keyword-detector.ts",
    "keyword:browser": "ts-node src/browser-keyword-detector.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "AI",
    "handyman",
    "voice-assistant",
    "computer-vision",
    "smart-glasses"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@azure/storage-blob": "^12.17.0",
    "@google-cloud/vision": "^4.0.2",
    "@picovoice/porcupine-node": "^3.0.2",
    "@pinecone-database/pinecone": "^2.0.1",
    "aws-sdk": "^2.1673.0",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "jimp": "^0.22.12",
    "langchain": "^0.1.36",
    "microsoft-cognitiveservices-speech-sdk": "^1.38.0",
    "multer": "^1.4.5-lts.1",
    "node-media-server": "^2.6.4",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.47.1",
    "pdf-parse": "^1.1.1",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
